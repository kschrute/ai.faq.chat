{
	"peacock.color": "#a2d33d",
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#b6dc67",
		"activityBar.background": "#b6dc67",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#2a88b5",
		"activityBarBadge.foreground": "#e7e7e7",
		"commandCenter.border": "#15202b99",
		"sash.hoverBorder": "#b6dc67",
		"statusBar.background": "#a2d33d",
		"statusBar.foreground": "#15202b",
		"statusBarItem.hoverBackground": "#87b429",
		"statusBarItem.remoteBackground": "#a2d33d",
		"statusBarItem.remoteForeground": "#15202b",
		"titleBar.activeBackground": "#a2d33d",
		"titleBar.activeForeground": "#15202b",
		"titleBar.inactiveBackground": "#a2d33d99",
		"titleBar.inactiveForeground": "#15202b99"
	},

	// Python API tests
	"python.defaultInterpreterPath": "./apps/api/.venv/bin/python",
	"python.testing.pytestEnabled": true,
	"python.testing.unittestEnabled": false,
	"python.testing.pytestPath": "uv run -- pytest",
	"python.testing.pytestArgs": [
		"tests",
		"--rootdir=.",
		"-c=pyproject.toml",
		"--no-header",
		"--no-summary"
	],
	"python.testing.cwd": "${workspaceFolder}/apps/api",

	// Web App Tests
	"vitest.ignoreWorkspace": false,
	"vitest.workspaceConfig": "./apps/web/vitest.config.ts",
	"vitest.nodeExecutable": "~/.asdf/shims/node",

	// Formatting
	"biome.lsp.bin": "./apps/web/node_modules/@biomejs/biome/bin/biome",
	"biome.configurationPath": "./apps/web/biome.json",
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"prettier.enable": false,

	// Formatters
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[markdown]": {
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
	},
	"[python]": {
		"editor.defaultFormatter": "charliermarsh.ruff"
	}
}
