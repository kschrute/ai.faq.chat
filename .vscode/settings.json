{
	"peacock.color": "#72439c",
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#8c5ab8",
		"activityBar.background": "#8c5ab8",
		"activityBar.foreground": "#e7e7e7",
		"activityBar.inactiveForeground": "#e7e7e799",
		"activityBarBadge.background": "#c5a279",
		"activityBarBadge.foreground": "#15202b",
		"commandCenter.border": "#e7e7e799",
		"sash.hoverBorder": "#8c5ab8",
		"statusBar.background": "#72439c",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#8c5ab8",
		"statusBarItem.remoteBackground": "#72439c",
		"statusBarItem.remoteForeground": "#e7e7e7",
		"titleBar.activeBackground": "#72439c",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#72439c99",
		"titleBar.inactiveForeground": "#e7e7e799"
	},

	// Python API tests
	"python.defaultInterpreterPath": "${workspaceFolder}/apps/api/.venv/bin/python",
	"python.testing.pytestEnabled": true,
	"python.testing.unittestEnabled": false,
	"python.testing.pytestPath": "uv run -- pytest",
	"python.testing.pytestArgs": [
		"tests",
		"--rootdir=.",
		"-c=pyproject.toml",
		"--no-header",
		"--no-summary"
	],
	"python.testing.cwd": "${workspaceFolder}/apps/api",

	// Web App Tests
	"vitest.ignoreWorkspace": false,
	"vitest.workspaceConfig": "./apps/web/vitest.config.ts",
	"vitest.nodeExecutable": "~/.asdf/shims/node",

	// Formatting
	"biome.lsp.bin": "./apps/web/node_modules/@biomejs/biome/bin/biome",
	"biome.configurationPath": "./apps/web/biome.json",
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"prettier.enable": false,

	// Formatters
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[markdown]": {
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
	},
	"[python]": {
		"editor.defaultFormatter": "charliermarsh.ruff"
	}
}
