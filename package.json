{
	"name": "ai.faq",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"license": "ISC",
	"packageManager": "pnpm@10.10.0",
	"scripts": {
		"deps": "turbo run deps deps:root",
		"deps:root": "pnpm install --frozen-lockfile",
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"prepare": "husky"
	},
	"lint-staged": {
		"apps/web/**/*.{js,ts,jsx,tsx,json}": [
			"pnpm --filter @ai-faq-chat/web exec biome format --write"
		],
		"apps/api/**/*.py": [
			"uv run --project apps/api ruff format",
			"uv run --project apps/api ruff check --fix"
		]
	},
	"devDependencies": {
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.7.4"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	}
}
